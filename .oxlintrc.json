{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["jsdoc", "import", "typescript", "oxc", "unicorn", "react", "react-perf"],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "warn",
    "style": "warn"
  },
  "env": {
    "builtin": true,
    "browser": true,
    "es2024": true
  },
  "rules": {
    // Correctness Overwrites
    "jsdoc/check-tag-names": [
      "error",
      {
        "typed": true
      }
    ],

    // Suspicious Overwrites
    "import/no-nodejs-modules": "off",
    "preserve-caught-error": "off",
    "unicorn/consistent-function-scoping": "off",
    "unicorn/no-array-sort": "off",

    // Style Overwrites
    "max-statements": "off",
    "max-params": "off",
    "capitalized-comments": "off",
    "no-continue": "off",
    "no-magic-numbers": "off",
    "no-duplicate-imports": "off",
    "no-ternary": "off",
    "no-nested-ternary": "off",
    "no-namespace": "off",
    "id-length": "off",
    "init-declarations": "off",
    "prefer-destructuring": "off",
    "sort-imports": "off",
    "sort-keys": "off",
    "func-style": "off",
    "new-cap": "off",
    "no-template-curly-in-string": "off",
    "import/exports-last": "off",
    "import/no-named-export": "off",
    "import/group-exports": "off",
    "import/prefer-default-export": "off",
    "import/no-mutable-exports": "off",
    "import/no-unassigned-import": "off",
    "import/consistent-type-specifier-style": "off",
    "unicorn/no-null": "off",
    "unicorn/filename-case": "off",
    "unicorn/prefer-global-this": "off",
    "unicorn/prefer-top-level-await": "off",

    // Pedantic Overwrites
    "require-await": "off",
    "no-negated-condition": "off",
    "no-promise-executor-return": "off",
    "max-lines-per-function": "off",
    "no-warning-comments": "off",
    "no-inline-comments": "off",
    "max-dependencies": "off",
    "max-depth": "off",
    "max-lines": "off",
    "max-classes-per-file": "off",
    "no-lonely-if": "off",
    "jsdoc/require-param-type": "off",
    "jsdoc/require-returns-type": "off",
    "jsdoc/require-param": "off",
    "typescript/restrict-plus-operands": [
      "warn",
      {
        "allowAny": false,
        "allowBoolean": false,
        "allowNullish": false,
        "allowNumberAndString": false,
        "allowRegExp": false
      }
    ],
    "unicorn/number-literal-case": "off",
    "unicorn/no-nested-ternary": "off",
    "unicorn/no-object-as-default-parameter": "off",

    // Restriction Overwrites
    "no-empty": "error",
    "no-regex-spaces": "error",
    "no-empty-function": "error",
    "jsdoc/check-access": "warn",
    "typescript/no-dynamic-delete": "error",
    "typescript/no-empty-object-type": "error",
    "typescript/no-namespace": "error",
    "typescript/no-non-null-asserted-nullish-coalescing": "error",
    "typescript/no-non-null-assertion": "error",
    "typescript/no-require-imports": "error",
    "typescript/use-unknown-in-catch-callback-variable": "error",
    "typescript/non-nullable-type-assertion-style": "error",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["../*"],
            "message": "Use '@/' imports instead of relative parent imports"
          }
        ]
      }
    ],

    // React Overwrites
    "react/no-unescaped-entities": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-max-depth": "off",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-handler-names": "off",
    "react/jsx-no-useless-fragment": "off",
    "react/jsx-no-literals": "off",
    "react/require-default-props": "off",
    "react/jsx-curly-brace-presence": "off",
    "react/jsx-sort-props": "off",
    "react/jsx-newline": "off",
    "react/jsx-one-expression-per-line": "off",
    "react/jsx-max-props-per-line": "off",
    "react/function-component-definition": "off",
    "react/jsx-wrap-multilines": "off",
    "react/jsx-closing-bracket-location": "off",
    "react/jsx-first-prop-new-line": "off",
    "react/jsx-indent-props": "off",
    "react/jsx-indent": "off",
    "react/jsx-tag-spacing": "off",
    "react/destructuring-assignment": "off",
    "react/no-array-index-key": "off",
    "react/prop-types": "off",
    "react/no-multi-comp": "off",
    "react/no-unstable-nested-components": "off",
    "react/jsx-props-no-multi-spaces": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-boolean-value": "off",
    "react/display-name": "off",
    "react/self-closing-comp": "off"
  },
  "ignorePatterns": ["node_modules/", "dist/", "dist-web/", "tools/", "*.config.js", "*.config.ts"]
}
